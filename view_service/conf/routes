# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /                           controllers.HomeController.index()

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /register                   controllers.HomeController.register()

GET     /driver_page                controllers.HomeController.driver()

GET     /hitchhiker_page            controllers.HomeController.hitchhiker()

POST    /new_user                   api_service.controllers.APIController.newUser()

POST    /login_user                 api_service.controllers.APIController.login()