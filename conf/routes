# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /                           controllers.ViewController.index()

GET     /main_page                  controllers.ViewController.mainPage()

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST 	/request_ride				controllers.ViewController.requestRide()

POST    /register_ride              controllers.ViewController.registerRides()

# REGISTRATION ROUTES
GET     /register                   controllers.ViewController.register()

POST    /new_user                   api_service.controllers.APIController.newUser()

# LOGIN ROUTES
GET     /login                      controllers.ViewController.login()

POST    /login                      controllers.ViewController.postLogin()

GET     /logout                     controllers.ViewController.logoutUser()